<div class="d-flex align-items-center justify-content-center">
  <div class="col-md-6 col-md-offset-3 custom-margin-top">
    <%= form_with(model: @form, url: assessment_form_url) do |f| %>

        <%=f.label :name %>
        <%=f.text_field :name, class: 'form-control'%>

        <%=f.label :yomi %>
        <%=f.text_field :yomi, class: 'form-control'%>
        
        <%=f.label :phone_number %>
        <%=f.telephone_field :phone_number, class: 'form-control'%>

        <%=f.label :email %>
        <%=f.email_field :email, class: 'form-control'%>

        <div class="col-md-6 custom-margin-top">
          <%= f.submit "査定依頼する", class: "btn btn-primary form-control " %>
        </div>

    <% end %>

  </div>
</div>