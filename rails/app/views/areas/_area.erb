<div class="card mt-3">
  <div class="card-body">
    <p class="fs-3 fw-bold ms-5"><%=@prefecture.name%></p>
    <div class="custom-grid">
      <% @cities.each do |city| %>
        <div class="col-4">
          <a href="/areas/<%=@prefecture.id%>/city/<%=city.id%>" class="card-link"><%= city.name %></a>
        </div>
      <% end %>
    </div>
  </div>
</div>
